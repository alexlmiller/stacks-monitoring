# Stacks Monitoring - Environment Configuration
# Copy this file to .env and configure for your environment

# =============================================================================
# Host Identification
# =============================================================================
# Label used to identify this host in metrics and logs
HOST_LABEL=stacks-node

# =============================================================================
# Metrics Configuration
# =============================================================================
# Remote write URL for Prometheus/VictoriaMetrics
# Examples:
#   Prometheus: http://prometheus:9090/api/v1/write
#   VictoriaMetrics: http://victoriametrics:8428/api/v1/write
METRICS_TARGET_URL=http://victoriametrics:8428/api/v1/write

# =============================================================================
# Logs Configuration
# =============================================================================
# Push URL for Loki/VictoriaLogs
# Examples:
#   Loki: http://loki:3100/loki/api/v1/push
#   VictoriaLogs: http://victorialogs:9428/insert/loki/api/v1/push?_stream_fields=job,host,service,level
LOGS_TARGET_URL=http://victorialogs:9428/insert/loki/api/v1/push?_stream_fields=job,host,service,level

# =============================================================================
# Stacks Service Endpoints
# =============================================================================
# Use host.docker.internal to access services on the Docker host
# Or replace with actual IP addresses/hostnames

# Stacks Node metrics endpoint (default port 9153)
STACKS_NODE_METRICS=host.docker.internal:9153

# Stacks Signer metrics endpoint (default port 30001)
STACKS_SIGNER_METRICS=host.docker.internal:30001

# Bitcoin exporter metrics endpoint (default port 9332)
BITCOIN_METRICS=host.docker.internal:9332

# =============================================================================
# Alloy Configuration
# =============================================================================
# Alloy debug UI port
ALLOY_UI_PORT=12345

# Log level (debug, info, warn, error)
ALLOY_LOG_LEVEL=info

# =============================================================================
# Storage Configuration (Full Stack Only)
# =============================================================================
# Prometheus retention
PROMETHEUS_RETENTION=15d

# VictoriaLogs retention
VICTORIALOGS_RETENTION=4w

# =============================================================================
# Grafana Configuration (Full Stack Only)
# =============================================================================
# Grafana admin password (change this!)
GF_SECURITY_ADMIN_PASSWORD=admin

# Grafana server URL (for alert links)
GF_SERVER_ROOT_URL=http://localhost:3000
