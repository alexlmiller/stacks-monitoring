{
  "apiVersion": 1,
  "groups": [
    {
      "orgId": 1,
      "name": "Stacks Signer Alerts",
      "folder": "Stacks Alerts",
      "interval": "1m",
      "rules": [
        {
          "uid": "stacks-signer-down",
          "title": "Stacks Signer Down",
          "condition": "C",
          "data": [
            {
              "refId": "A",
              "relativeTimeRange": {
                "from": 300,
                "to": 0
              },
              "datasourceUid": "__expr__",
              "model": {
                "conditions": [
                  {
                    "evaluator": {
                      "params": [],
                      "type": "gt"
                    },
                    "operator": {
                      "type": "and"
                    },
                    "query": {
                      "params": ["A"]
                    },
                    "reducer": {
                      "params": [],
                      "type": "last"
                    },
                    "type": "query"
                  }
                ],
                "datasource": {
                  "type": "__expr__",
                  "uid": "__expr__"
                },
                "expression": "up{service=\"stacks-signer\"}",
                "intervalMs": 1000,
                "maxDataPoints": 43200,
                "refId": "A",
                "type": "classic_conditions"
              }
            },
            {
              "refId": "B",
              "relativeTimeRange": {
                "from": 300,
                "to": 0
              },
              "datasourceUid": "-100",
              "model": {
                "datasource": {
                  "type": "__expr__",
                  "uid": "-100"
                },
                "expression": "A",
                "reducer": "last",
                "refId": "B",
                "type": "reduce"
              }
            },
            {
              "refId": "C",
              "relativeTimeRange": {
                "from": 300,
                "to": 0
              },
              "datasourceUid": "-100",
              "model": {
                "conditions": [
                  {
                    "evaluator": {
                      "params": [1],
                      "type": "lt"
                    },
                    "operator": {
                      "type": "and"
                    },
                    "query": {
                      "params": ["B"]
                    },
                    "reducer": {
                      "params": [],
                      "type": "last"
                    },
                    "type": "query"
                  }
                ],
                "datasource": {
                  "type": "__expr__",
                  "uid": "-100"
                },
                "expression": "B",
                "refId": "C",
                "type": "threshold"
              }
            }
          ],
          "noDataState": "Alerting",
          "execErrState": "Alerting",
          "for": "3m",
          "annotations": {
            "description": "Stacks signer metrics endpoint has been unreachable for more than 3 minutes. The signer process may have crashed.",
            "summary": "Stacks Signer is down"
          },
          "labels": {
            "severity": "critical",
            "service": "stacks-signer"
          },
          "isPaused": false
        },
        {
          "uid": "stacks-signer-high-rejection",
          "title": "Stacks Signer High Rejection Rate",
          "condition": "C",
          "data": [
            {
              "refId": "A",
              "relativeTimeRange": {
                "from": 600,
                "to": 0
              },
              "datasourceUid": "__expr__",
              "model": {
                "datasource": {
                  "type": "__expr__",
                  "uid": "__expr__"
                },
                "expression": "sum(rate(stacks_signer_block_responses_sent{response_type=\"rejected\"}[5m])) / sum(rate(stacks_signer_block_responses_sent[5m]))",
                "intervalMs": 1000,
                "maxDataPoints": 43200,
                "refId": "A",
                "type": "math"
              }
            },
            {
              "refId": "B",
              "relativeTimeRange": {
                "from": 600,
                "to": 0
              },
              "datasourceUid": "-100",
              "model": {
                "datasource": {
                  "type": "__expr__",
                  "uid": "-100"
                },
                "expression": "A",
                "reducer": "last",
                "refId": "B",
                "type": "reduce"
              }
            },
            {
              "refId": "C",
              "relativeTimeRange": {
                "from": 600,
                "to": 0
              },
              "datasourceUid": "-100",
              "model": {
                "conditions": [
                  {
                    "evaluator": {
                      "params": [0.5],
                      "type": "gt"
                    },
                    "operator": {
                      "type": "and"
                    },
                    "query": {
                      "params": ["B"]
                    },
                    "reducer": {
                      "params": [],
                      "type": "last"
                    },
                    "type": "query"
                  }
                ],
                "datasource": {
                  "type": "__expr__",
                  "uid": "-100"
                },
                "expression": "B",
                "refId": "C",
                "type": "threshold"
              }
            }
          ],
          "noDataState": "OK",
          "execErrState": "Error",
          "for": "5m",
          "annotations": {
            "description": "Signer is rejecting more than 50% of block proposals.",
            "summary": "High block rejection rate on Stacks Signer"
          },
          "labels": {
            "severity": "warning",
            "service": "stacks-signer"
          },
          "isPaused": false
        },
        {
          "uid": "stacks-signer-not-registered",
          "title": "Stacks Signer Not Registered",
          "condition": "C",
          "data": [
            {
              "refId": "A",
              "relativeTimeRange": {
                "from": 600,
                "to": 0
              },
              "datasourceUid": "__expr__",
              "model": {
                "datasource": {
                  "type": "__expr__",
                  "uid": "__expr__"
                },
                "expression": "stacks_signer_is_registered",
                "intervalMs": 1000,
                "maxDataPoints": 43200,
                "refId": "A",
                "type": "math"
              }
            },
            {
              "refId": "B",
              "relativeTimeRange": {
                "from": 600,
                "to": 0
              },
              "datasourceUid": "-100",
              "model": {
                "datasource": {
                  "type": "__expr__",
                  "uid": "-100"
                },
                "expression": "A",
                "reducer": "last",
                "refId": "B",
                "type": "reduce"
              }
            },
            {
              "refId": "C",
              "relativeTimeRange": {
                "from": 600,
                "to": 0
              },
              "datasourceUid": "-100",
              "model": {
                "conditions": [
                  {
                    "evaluator": {
                      "params": [1],
                      "type": "lt"
                    },
                    "operator": {
                      "type": "and"
                    },
                    "query": {
                      "params": ["B"]
                    },
                    "reducer": {
                      "params": [],
                      "type": "last"
                    },
                    "type": "query"
                  }
                ],
                "datasource": {
                  "type": "__expr__",
                  "uid": "-100"
                },
                "expression": "B",
                "refId": "C",
                "type": "threshold"
              }
            }
          ],
          "noDataState": "NoData",
          "execErrState": "Error",
          "for": "5m",
          "annotations": {
            "description": "Signer is not registered for the current reward cycle.",
            "summary": "Stacks Signer not registered for current cycle"
          },
          "labels": {
            "severity": "warning",
            "service": "stacks-signer"
          },
          "isPaused": false
        },
        {
          "uid": "stacks-node-low-peers",
          "title": "Stacks Node Low Peers",
          "condition": "C",
          "data": [
            {
              "refId": "A",
              "relativeTimeRange": {
                "from": 600,
                "to": 0
              },
              "datasourceUid": "__expr__",
              "model": {
                "datasource": {
                  "type": "__expr__",
                  "uid": "__expr__"
                },
                "expression": "stacks_node_peer_count",
                "intervalMs": 1000,
                "maxDataPoints": 43200,
                "refId": "A",
                "type": "math"
              }
            },
            {
              "refId": "B",
              "relativeTimeRange": {
                "from": 600,
                "to": 0
              },
              "datasourceUid": "-100",
              "model": {
                "datasource": {
                  "type": "__expr__",
                  "uid": "-100"
                },
                "expression": "A",
                "reducer": "last",
                "refId": "B",
                "type": "reduce"
              }
            },
            {
              "refId": "C",
              "relativeTimeRange": {
                "from": 600,
                "to": 0
              },
              "datasourceUid": "-100",
              "model": {
                "conditions": [
                  {
                    "evaluator": {
                      "params": [10],
                      "type": "lt"
                    },
                    "operator": {
                      "type": "and"
                    },
                    "query": {
                      "params": ["B"]
                    },
                    "reducer": {
                      "params": [],
                      "type": "last"
                    },
                    "type": "query"
                  }
                ],
                "datasource": {
                  "type": "__expr__",
                  "uid": "-100"
                },
                "expression": "B",
                "refId": "C",
                "type": "threshold"
              }
            }
          ],
          "noDataState": "NoData",
          "execErrState": "Error",
          "for": "10m",
          "annotations": {
            "description": "Stacks node has fewer than 10 peers connected. Low peer count may affect block propagation.",
            "summary": "Stacks Node has low peer count"
          },
          "labels": {
            "severity": "warning",
            "service": "stacks-node"
          },
          "isPaused": false
        }
      ]
    }
  ]
}
