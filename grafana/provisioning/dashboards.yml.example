# Grafana Dashboard Provisioning
#
# Copy this file to /etc/grafana/provisioning/dashboards/stacks.yml
# and copy the dashboard JSON to the configured path

apiVersion: 1

providers:
  - name: 'Stacks Monitoring'
    orgId: 1
    folder: 'Stacks'
    folderUid: ''
    type: file
    disableDeletion: false
    updateIntervalSeconds: 30
    allowUiUpdates: true
    options:
      # Path to dashboard JSON files
      # Update this path to match your installation
      path: /var/lib/grafana/dashboards
